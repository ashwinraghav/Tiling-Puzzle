            	String line = scanner.nextLine();
            	
            	for(int lcv=0; lcv<line.length(); ++lcv)
            	{
            		
            	}
            	

            }

        }
        
        catch (FileNotFoundException fnfe) 
        {
        	fnfe.printStackTrace();
        	ErrorHandler.throwAndTerminate("attempt to read from file failed");
        }
		
        finally
        {
        	scanner.close();
        }
        				
	}
	
		
}
